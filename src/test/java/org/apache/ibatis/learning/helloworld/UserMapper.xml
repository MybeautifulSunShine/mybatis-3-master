<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.apache.ibatis.learning.helloworld.UserMapper">


    <insert id="insert">
        insert into user values(#{id},#{name});
    </insert>


    <select id="getById" parameterType="int" resultType="org.apache.ibatis.learning.helloworld.User">
        SELECT * FROM user WHERE id=#{id};
    </select>
</mapper>